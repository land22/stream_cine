{% extends 'baseAdmin.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="content-header sty-one">
      <h1>Modifier La catégorie </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('app_categorie_index') }}" class="btn btn-warning">Retour à la liste</a></li>
      </ol>
    </div>
      <div class="content">
         <div class="info-box">
         <div class="table-responsive">

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
