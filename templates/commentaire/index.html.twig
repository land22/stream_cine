{% extends 'baseAdmin.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1>Listes des commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Contenu</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.etat}}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">Voir</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de commentaires enregistr√©s !!!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
