{% extends 'base.html.twig' %}

{% block title %}Cinema index{% endblock %}

{% block body %}
    <h1>Cinema index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Localisation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cinema in cinemas %}
            <tr>
                <td>{{ cinema.id }}</td>
                <td>{{ cinema.nom }}</td>
                <td>{{ cinema.localisation }}</td>
                <td>
                    <a href="{{ path('app_cinema_show', {'id': cinema.id}) }}">show</a>
                    <a href="{{ path('app_cinema_edit', {'id': cinema.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cinema_new') }}">Create new</a>
{% endblock %}
